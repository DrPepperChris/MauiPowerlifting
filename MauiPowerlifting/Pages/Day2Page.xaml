<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPowerlifting.Pages.Day2Page"
             xmlns:local="clr-namespace:MauiPowerlifting.ViewModels"
             Title="Day 2">
    <FlexLayout Direction="Column"
            AlignItems="Center"
            JustifyContent="SpaceEvenly">
        <Label 
            Text="Max effort squat"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="22" />
        <HorizontalStackLayout>
            <Label Text="Compition Sqaut: 5 sets of 2 @87% of max" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="SSB squat: 5 sets of 3 @ 80% of max" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Leg press: 4 sets of 10" />
        </HorizontalStackLayout>
        <ListView Grid.Row="3"
                  ItemsSource="{Binding Bench}" />
    </FlexLayout>
</ContentPage>